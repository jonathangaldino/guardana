{
  "name": "@guardana/server",
  "version": "1.0.0",
  "description": "API do Guardana",
  "main": "index.js",
  "repository": "git@github.com:jonathangaldino/guardana-server.git",
  "author": "Jonathan Galdino <johnzballad@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "babel-node -x \".ts\" src/index.ts",
    "dev": "webpack --watch --progress --config webpack.config.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts\" --source-maps inline",
    "lint": "eslint src --ext .ts",
    "lint-fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "dotenv-safe": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "mongoose": "^5.12.9"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.1",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__router": "^8.0.4"
  }
}
